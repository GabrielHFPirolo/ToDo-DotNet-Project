@model List<dotnet_CRUD.Models.Todo>

<h1>@ViewData["Title"]</h1>

@if (Model.Count > 0){
    <table class="table">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Título</th>
        <th scope="col">Criado em</th>
        <th scope="col">Data Final</th>
        <th scope="col">Finalizado em</th>
        <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model){
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Title</td>
                <td>@todo.CreatedAt</td>
                <td>@todo.DeadLine</td>
                <td>
                    @(todo.FinishedAt.HasValue ? todo.FinishedAt : "em Andamento")
                </td>
                <td>
                    <a 
                    asp-controller="Todo"
                    asp-action="Finish"
                    asp-route-id="@todo.Id"
                    class="btn btn-success btn-sm @(todo.FinishedAt.HasValue ? "disabled" : "")"
                    >Finalizar
                    </a>
                    <a 
                    asp-controller="Todo" 
                    asp-action="Edit" 
                    asp-route-id="@todo.Id"
                    class="btn btn-primary btn-sm @(todo.FinishedAt.HasValue ? "disabled" : "")"
                    >
                    Editar
                    </a>
                    <a
                    asp-controller="Todo"
                    asp-action="Delete"
                    asp-route-id="@todo.Id" 
                    class="btn btn-danger btn-sm"
                    >
                    Deletar
                    </a>
                </td>
            </tr>
        }
    </tbody>
    </table>

    <a asp-controller="Todo" asp-action="Create" class="btn btn-dark btn-md">Nova Tarefa</a>
}
else{
    <p>Nenhuma Tarefa foi Cadastrada</p>
}

